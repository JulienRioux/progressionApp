<%- include ./partials/header %>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Add Category</h1>
  </div>
</div>

<div class="container">
  <div class="col-lg-6 offset-lg-3">
      <div class="signupForm">
          <h1 class="signupHeader">New category</h1>
          <form action="/categories/new" method="POST">

              <div class="form-group">
                  <label>Title</label>
                  <input class="form-control" name="title" type="text" placeholder="The Category title goes here!" value="" autocomplete="off">
              </div>

              <div class="form-group">
                  <input class="btn btn-info" type="submit" value="Add it!">
              </div>
          </form>
          <a href="/categories" class="btn btn-primary">Go Back</a>
      </div>
  </div>
</div>


<%- include ./partials/footer %>
